<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:tab="clr-namespace:Sharpnado.Tabs;assembly=Sharpnado.Tabs"
             BackgroundColor="#f5f5f5" 
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" 
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:controls="clr-namespace:Foody.ViewModels"
             xmlns:local="clr-namespace:Foody.ViewModels"
             xmlns:chips="clr-namespace:Xamarin.Forms.Chips;assembly=Xamarin.Forms.Chips" xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit"
             x:Class="Foody.Views.Pantry">



    <ContentPage.Resources>
        <ResourceDictionary Source="../Styles/Styles.xaml" />
        <Style x:Key="SegmentedTabStyle" TargetType="tab:SegmentedTabItem">
            <Setter Property="SelectedTabColor" Value="#07BDF6" />
            <Setter Property="LabelSize" Value="18" />
            <Setter Property="SelectedLabelColor" Value="White" />
            <Setter Property="UnselectedLabelColor" Value="Gray" />
        </Style>
        <Style x:Key="TextStyle" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <!--Header-->
            <yummy:PancakeView x:Name="headPantry"  Grid.Column="0" Grid.Row="0" BackgroundColor="#07BDF6" CornerRadius="0,0,10,10"  WidthRequest="500">
                <StackLayout>
                <Grid x:Name="ptManage" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="0.9*"/>
                    </Grid.ColumnDefinitions>
                        <!--dòng 1 -->
                        <Label Text="PANTRY" FontSize="28" 
                               FontAttributes="Bold" Margin="0,10"
                               HorizontalOptions="Center" VerticalOptions="CenterAndExpand" 
                               TextColor="White" 
                               Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
                        <Image Source="wrench.png" HeightRequest="24" WidthRequest="24"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="Start" 
                               Grid.Column="1" Grid.Row="0">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer
                                Tapped="PantrySetting"
                                 />
                            </Image.GestureRecognizers>
                        </Image>
                        <Image Source="menu1.png" HeightRequest="24" WidthRequest="24"
                               VerticalOptions="CenterAndExpand" HorizontalOptions="End" 
                               Grid.Column="1" Grid.Row="0" Margin="0,0,20,0">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer
                                Tapped="ShowOption"
                                 />
                            </Image.GestureRecognizers>
                        </Image>
                        <!--dòng 2-->
                        <Frame CornerRadius="10" Padding="0" HasShadow="False" BorderColor="#D8D8D8" 
                               Grid.Column="0" Grid.Row="1" 
                               HeightRequest="60" WidthRequest="280" Margin="0,0,10,40"
                               HorizontalOptions="End" VerticalOptions="Center">
                            <SearchBar x:Name="SearchBarIngredient" Keyboard="Text" FontSize="15"   HeightRequest="55"  Margin="0,0,0,0" Placeholder="Add New Item to Pantry" TextChanged="SearchBar_TextChanged"></SearchBar>
                        </Frame>
                        <Frame  CornerRadius="10" Padding="0" HasShadow="False" BorderColor="#D8D8D8" 
                               Grid.Column="1" Grid.Row="1" 
                               HeightRequest="60" WidthRequest="65" Margin="0,0,0,40"
                               HorizontalOptions="Start" VerticalOptions="Center">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="AddIngredientToPUserPantry_Tapped" />
                            </Frame.GestureRecognizers>
                            <Image x:Name="AddItemToUserPantryImg" Source="plus1.png"  Margin="21"/>
                        </Frame>

                    </Grid>
                    <Label x:Name="pantry" Text="PANTRY" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="White" />
                </StackLayout>
            </yummy:PancakeView>
            
            <Grid  Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="tabPantry" />
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <!--Tab view-->
                <Frame HorizontalOptions="Center" CornerRadius="30" Margin="6" Padding="8" Grid.Row="0" Grid.Column="0">
                    <tab:TabHostView x:Name="TabPantry"  
                                        HeightRequest="40"
                                        Margin="2"
                                        VerticalOptions="Center"
                                        BackgroundColor="White"
                                        CornerRadius="20"
                                        IsSegmented="True"
                                        SegmentedHasSeparator="False"
                                        SegmentedOutlineColor="White"
                                        TabType="Fixed"
                                        SelectedIndex="{Binding Source={x:Reference Switcher}, Path=SelectedIndex, Mode=TwoWay}"
                                        SelectedTabIndexChanged="TabPantry_SelectedTabIndexChanged">
                        <tab:TabHostView.Tabs>
                            <tab:SegmentedTabItem Style="{StaticResource SegmentedTabStyle}" Label="Manage" IsSelected="True" TabIndex="0"/>
                            <tab:SegmentedTabItem Style="{StaticResource SegmentedTabStyle}" Label="Explore" TabIndex="1" Padding="30,0"/>
                            <tab:SegmentedTabItem Style="{StaticResource SegmentedTabStyle}" Label="Search" TabIndex="2"></tab:SegmentedTabItem>
                        </tab:TabHostView.Tabs>
                    </tab:TabHostView>
                </Frame>
                <!--Conten of pages-->
                <tab:ViewSwitcher x:Name="Switcher" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" Grid.Row="1" Grid.Column="0">
                    <!--page 1-->
                    <ContentView TabIndex="0" Padding="0">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="PTnormal"/>
                                <RowDefinition x:Name="PTlist"/>
                            </Grid.RowDefinitions>
                            <StackLayout Grid.Column="0" Grid.Row="0">
                                <Image Source="note1.png" HorizontalOptions="CenterAndExpand" Margin="0,20" HeightRequest="200" WidthRequest="200"/>
                                <Label Text="It looks like your pantry is empty. Would you like to go through the pantry builder where you can quickly add many common items?"
                                            FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center" Margin="20,0"/>
                                <yummy:PancakeView  
                                        BackgroundGradientStartPoint="0,0" BackgroundGradientEndPoint="1,0"
                                        Margin="10,15"
                                        HeightRequest="60" WidthRequest="350"
                                        BackgroundColor="#07BDF6" CornerRadius="15" 
                                        VerticalOptions="Start" HorizontalOptions="Center">
                                    <yummy:PancakeView.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding NavToPantry}"/>
                                    </yummy:PancakeView.GestureRecognizers>
                                    <yummy:PancakeView.BackgroundGradientStops>
                                        <yummy:GradientStopCollection>
                                            <yummy:GradientStop Color="#5AE099" Offset="1" />
                                            <yummy:GradientStop Color="#65DCC6" Offset="0.5" />
                                            <yummy:GradientStop Color="#6CD4EC" Offset="0" />
                                        </yummy:GradientStopCollection>
                                    </yummy:PancakeView.BackgroundGradientStops>
                                    <Label Text="Go To Pantry Builder" TextColor="White" FontSize="27" 
                                                HorizontalOptions="Center" VerticalOptions="Center">
                                    </Label>
                                </yummy:PancakeView>
                            </StackLayout>
                            <!--tesst-->
                            <CollectionView x:Name="manager" 
                                        BackgroundColor="#f5f5f5"
                                        VerticalScrollBarVisibility="Never" 
                                        Grid.Column="0" Grid.Row="1" 
                                        Margin="0">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Padding="20,5" Grid.Row="1" Grid.Column="0">
                                            <yummy:PancakeView BackgroundColor="White" VerticalOptions="StartAndExpand" 
                                                HorizontalOptions="FillAndExpand" Shadow="{yummy:ShadowMarkup BlurRadius=3}"  CornerRadius="10">
                                                <behaviors:Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}" Command="{Binding Source={RelativeSource AncestorType={x:Type local:PantryViewModel}}, Path=Checkmanager}"
                                                            CommandParameter="{Binding Aisle}">
                                                    <behaviors:Expander.Header >
                                                        <Grid HorizontalOptions="FillAndExpand" HeightRequest="66" VerticalOptions="EndAndExpand">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Label Text="{Binding Aisle}" 
                                                            MaxLines="1" LineBreakMode="TailTruncation"
                                                            TextColor="Black" FontSize="18" 
                                                            Grid.Column="0" Margin="15" 
                                                            VerticalOptions="EndAndExpand"/>
                                                            <Image Source="{Binding IconExpand}" Grid.Column="1" Margin="15" VerticalOptions="EndAndExpand"></Image>
                                                        </Grid>
                                                    </behaviors:Expander.Header>
                                                    <StackLayout BindableLayout.ItemsSource="{Binding UserPantryListItems}" HorizontalOptions="Start" VerticalOptions="Center" Margin="20,0">
                                                        <BindableLayout.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid RowSpacing="0" HeightRequest="60">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="0.5*"/>
                                                                        <ColumnDefinition Width="2*"/>
                                                                        <ColumnDefinition Width="0.75*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <ffimageloading:CachedImage 
                                                                    Margin="4"
                                                                    Source="{Binding image, StringFormat='https://spoonacular.com/cdn/ingredients_100x100/{0:F0}'}" 
                                                                    Grid.Column="0" Grid.Row="0"
                                                                    HeightRequest="60"  WidthRequest="60" Aspect="AspectFit">
                                                                    </ffimageloading:CachedImage>
                                                                    <Label TextColor="#2F3246" Text="{Binding name}" FontSize="14" Grid.Column="1" Grid.Row="0"  VerticalOptions="CenterAndExpand" Margin="0,4,0,0">

                                                                    </Label>
                                                                    <CheckBox Grid.Column="2" Grid.Row="0" IsChecked="{Binding IsChoose, Mode=TwoWay}" Color="Black" HorizontalOptions="Start" VerticalOptions="CenterAndExpand"/>
                                                                    <Image Source="delete.png" Grid.Column="2" Grid.Row="0" HorizontalOptions="End" VerticalOptions="CenterAndExpand">
                                                                        <Image.GestureRecognizers>
                                                                            <TapGestureRecognizer Tapped="DeleteUserPantryItem_Tapped" CommandParameter="{Binding ., Converter={StaticResource ConvertToUserPantryItem} , ConverterParameter={Binding .}}"/>
                                                                        </Image.GestureRecognizers>
                                                                    </Image>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </BindableLayout.ItemTemplate>
                                                    </StackLayout>
                                                </behaviors:Expander>
                                            </yummy:PancakeView>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Grid>
                    </ContentView>
                    <!--page 2-->
                    <ContentView TabIndex="1" Padding="8,0,0,8" >
                        <ScrollView VerticalScrollBarVisibility="Never" >
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Name="lb"/>
                                    <RowDefinition x:Name="col"/>
                                    <RowDefinition Height="0.3*"/>
                                    <RowDefinition Height="0.98*"/>
                                    <RowDefinition Height="0.3*"/>
                                    <RowDefinition Height="0.98*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!--1-->
                                <Label Text="Recipes With ingredients from your pantry" FontSize="25" FontAttributes="Bold" Grid.Column="0" Grid.Row="0" Padding="10, 40, 0 , 0" />
                                <CollectionView
                                    x:Name="collectionView_ingredients"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    HeightRequest="100"
                                    SelectionMode="Single"
                                    ItemsSource="{Binding PopularRecipes}"
                                    SelectionChanged="collectionView_ingredients_SelectionChanged">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout
                                            Orientation="Horizontal"
                                            HorizontalItemSpacing="13"
                                            SnapPointsType="MandatorySingle"
                                            SnapPointsAlignment="Center" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid WidthRequest="190" Padding="0,15,0,0">
                                                <Grid.RowDefinitions>
                                                    <!--  0  -->
                                                    <RowDefinition Height="20" />
                                                    <!--  1  -->
                                                    <RowDefinition Height="80" />
                                                    <!--  2  -->
                                                    <RowDefinition Height="100" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <!--  0  -->
                                                    <ColumnDefinition Width="15" />
                                                    <!--  1  -->
                                                    <ColumnDefinition Width="145" />
                                                    <!--  2  -->
                                                    <ColumnDefinition Width="15" />
                                                </Grid.ColumnDefinitions>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup Name="CommonStates">
                                                        <VisualState Name="Selected">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="#f5f5f5" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <yummy:PancakeView
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="8,0,8,3"
                                        CornerRadius="25"
                                        Shadow="{yummy:ShadowMarkup BlurRadius=3}">
                                                    <yummy:PancakeView.BackgroundGradientStops>
                                                        <yummy:GradientStopCollection>
                                                            <yummy:GradientStop
                                                    Offset="0"
                                                    Color="White" />
                                                            <yummy:GradientStop
                                                    Offset="1"
                                                    Color="White" />
                                                        </yummy:GradientStopCollection>
                                                    </yummy:PancakeView.BackgroundGradientStops>

                                                    <StackLayout Padding="8,60,8,8">
                                                        <Label
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand"
                                                FontAttributes="Bold"
                                                HorizontalTextAlignment="Center"
                                                Margin="0"
                                                FontSize="15"
                                                Text="{Binding title}"
                                                Style="{StaticResource TxtSubtitle1_2}" 
                                                MaxLines="2"
                                                LineBreakMode="TailTruncation" />
                                                    </StackLayout>

                                                </yummy:PancakeView>

                                                <Frame 
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        CornerRadius="25"
                                        BackgroundColor="White"
                                        HasShadow="True"
                                        BorderColor="LightGray"
                                        Padding="8"
                                        >
                                                    <Frame
                                             Padding="0"
                                             CornerRadius="20"
                                             BackgroundColor="White"
                                             HasShadow="False">
                                                        <ffimageloading:CachedImage
                                                x:Name="image_loading"
                                                CacheDuration="30"
                                                DownsampleToViewSize="True"
                                                FadeAnimationForCachedImages="True"
                                                FadeAnimationEnabled="True"
                                                FadeAnimationDuration="100"
                                                Aspect="AspectFit"
                                                CacheType="All"
                                                Source="{Binding image}" />
                                                        <!--LoadingPlaceholder="reload.gif"-->
                                                    </Frame>

                                                </Frame>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                <!--2-->
                                <Label Text="Popular Recipes" FontSize="25" FontAttributes="Bold" Grid.Column="0" Grid.Row="2" Padding="10, 20, 0 , 0"/>
                                <CollectionView
                                    x:Name="collectionView_Popular"
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    ItemsSource="{Binding PopularRecipes}"
                                    HeightRequest="100"
                                    SelectionMode="Single"
                                    SelectionChanged="collectionView_Popular_SelectionChanged">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout
                                            Orientation="Horizontal"
                                            HorizontalItemSpacing="13"
                                            SnapPointsType="MandatorySingle"
                                            SnapPointsAlignment="Center" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid WidthRequest="190" Padding="0,15,0,0">
                                                <Grid.RowDefinitions>
                                                    <!--  0  -->
                                                    <RowDefinition Height="20" />
                                                    <!--  1  -->
                                                    <RowDefinition Height="80" />
                                                    <!--  2  -->
                                                    <RowDefinition Height="100" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <!--  0  -->
                                                    <ColumnDefinition Width="15" />
                                                    <!--  1  -->
                                                    <ColumnDefinition Width="145" />
                                                    <!--  2  -->
                                                    <ColumnDefinition Width="15" />
                                                </Grid.ColumnDefinitions>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup Name="CommonStates">
                                                        <VisualState Name="Selected">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="#f5f5f5" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <yummy:PancakeView
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="8,0,8,3"
                                        CornerRadius="25"
                                        Shadow="{yummy:ShadowMarkup BlurRadius=3}">
                                                    <yummy:PancakeView.BackgroundGradientStops>
                                                        <yummy:GradientStopCollection>
                                                            <yummy:GradientStop
                                                    Offset="0"
                                                    Color="White" />
                                                            <yummy:GradientStop
                                                    Offset="1"
                                                    Color="White" />
                                                        </yummy:GradientStopCollection>
                                                    </yummy:PancakeView.BackgroundGradientStops>

                                                    <StackLayout Padding="8,60,8,8">
                                                        <Label
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand"
                                                FontAttributes="Bold"
                                                HorizontalTextAlignment="Center"
                                                Margin="0"
                                                FontSize="15"
                                                Text="{Binding title}"
                                                Style="{StaticResource TxtSubtitle1_2}" 
                                                MaxLines="2"
                                                LineBreakMode="TailTruncation" />
                                                    </StackLayout>

                                                </yummy:PancakeView>

                                                <Frame 
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        CornerRadius="25"
                                        BackgroundColor="White"
                                        HasShadow="True"
                                        BorderColor="LightGray"
                                        Padding="8"
                                        >
                                                    <Frame
                                             Padding="0"
                                             CornerRadius="20"
                                             BackgroundColor="White"
                                             HasShadow="False">
                                                        <ffimageloading:CachedImage
                                                x:Name="image_loading"
                                                CacheDuration="30"
                                                DownsampleToViewSize="True"
                                                FadeAnimationForCachedImages="True"
                                                FadeAnimationEnabled="True"
                                                FadeAnimationDuration="100"
                                                Aspect="AspectFit"
                                                CacheType="All"
                                                Source="{Binding image}" />
                                                        <!--LoadingPlaceholder="reload.gif"-->
                                                    </Frame>

                                                </Frame>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                <!--3-->
                                <Label Text="Try A New Recipes" FontSize="25" FontAttributes="Bold" Grid.Column="0" Grid.Row="4" Padding="10, 20, 0 , 0"/>
                                <CollectionView
                                    x:Name="collectionView_Random"
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    ItemsSource="{Binding RandomRecipes}"
                                    HeightRequest="100"
                                    SelectionChanged="collectionView_Random_SelectionChanged">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout
                                            Orientation="Horizontal"
                                            HorizontalItemSpacing="13"
                                            SnapPointsType="MandatorySingle"
                                            SnapPointsAlignment="Center" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid WidthRequest="190" Padding="0,15,0,0">
                                                <Grid.RowDefinitions>
                                                    <!--  0  -->
                                                    <RowDefinition Height="20" />
                                                    <!--  1  -->
                                                    <RowDefinition Height="80" />
                                                    <!--  2  -->
                                                    <RowDefinition Height="100" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <!--  0  -->
                                                    <ColumnDefinition Width="15" />
                                                    <!--  1  -->
                                                    <ColumnDefinition Width="145" />
                                                    <!--  2  -->
                                                    <ColumnDefinition Width="15" />
                                                </Grid.ColumnDefinitions>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup Name="CommonStates">
                                                        <VisualState Name="Selected">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="#f5f5f5" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <yummy:PancakeView
                                        Grid.Row="1"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="8,0,8,3"
                                        CornerRadius="25"
                                        Shadow="{yummy:ShadowMarkup BlurRadius=3}">
                                                    <yummy:PancakeView.BackgroundGradientStops>
                                                        <yummy:GradientStopCollection>
                                                            <yummy:GradientStop
                                                    Offset="0"
                                                    Color="White" />
                                                            <yummy:GradientStop
                                                    Offset="1"
                                                    Color="White" />
                                                        </yummy:GradientStopCollection>
                                                    </yummy:PancakeView.BackgroundGradientStops>

                                                    <StackLayout Padding="8,60,8,8">
                                                        <Label
                                                HorizontalOptions="CenterAndExpand"
                                                VerticalOptions="CenterAndExpand"
                                                FontAttributes="Bold"
                                                HorizontalTextAlignment="Center"
                                                Margin="0"
                                                FontSize="15"
                                                Text="{Binding title}"
                                                Style="{StaticResource TxtSubtitle1_2}" 
                                                MaxLines="2"
                                                LineBreakMode="TailTruncation" />
                                                    </StackLayout>

                                                </yummy:PancakeView>

                                                <Frame 
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        CornerRadius="25"
                                        BackgroundColor="White"
                                        HasShadow="True"
                                        BorderColor="LightGray"
                                        Padding="8"
                                        >
                                                    <Frame
                                             Padding="0"
                                             CornerRadius="20"
                                             BackgroundColor="White"
                                             HasShadow="False">
                                                        <ffimageloading:CachedImage
                                                x:Name="image_loading"
                                                CacheDuration="30"
                                                DownsampleToViewSize="True"
                                                FadeAnimationForCachedImages="True"
                                                FadeAnimationEnabled="True"
                                                FadeAnimationDuration="100"
                                                Aspect="AspectFit"
                                                CacheType="All"
                                                Source="{Binding image}" />
                                                        <!--LoadingPlaceholder="reload.gif"-->
                                                    </Frame>

                                                </Frame>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </Grid>
                        </ScrollView>
                    </ContentView>
                    <!--page 3-->
                    <ContentView TabIndex="2">
                        <ScrollView>
                            <StackLayout>

                                <Grid BackgroundColor="White" RowSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Label Text="Keyword(s)" VerticalOptions="Start" HorizontalOptions="Start" Grid.Column="0" Grid.Row="0" Padding="8" FontAttributes="Bold" TextColor="Black" FontSize="18"/>
                                    <Frame CornerRadius="10" Padding="8,0,0,0" Margin="20,0,20,20"  BorderColor="Gray" Grid.Column="0" Grid.Row="1">
                                        <controls:CustomEntry x:Name="searchRecipes" Keyboard="Text" FontSize="18" HeightRequest="55" Placeholder="example: Pumpkin Pie" ></controls:CustomEntry>
                                    </Frame>
                                </Grid>
                                
                                <Grid BackgroundColor="White">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Label  Grid.Row="0"  FontSize="14" Text="Cuisines" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Center" Padding="8" FontAttributes="Bold"></Label>
                                    <FlexLayout Grid.Row="1" Direction="Row" Wrap="Wrap" Padding="8" AlignItems="Center" AlignContent="SpaceBetween" BackgroundColor="White" Margin="0">
                                        <chips:Chip
                                            Text="African"
                                            TextStyle="{StaticResource TextStyle}"
                                            BackgroundColor="#F5F5F5"
                                            IsToggleable="True"
                                            AutoToggle="True"
                                            Padding="8"
                                            Margin="4"
                                            SelectCommand="{Binding ChipCuisineSelectedCommand}"
                                            SelectCommandParameter="African"
                                            UnselectCommand="{Binding ChipCuisineUnselectedCommand}"
                                            UnselectCommandParameter="African">
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Selected">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="#62CBEC" />
                                                            <Setter Property="TextColor" Value="White" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Normal">
