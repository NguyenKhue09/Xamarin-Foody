                        <Frame CornerRadius="10" Padding="0" HasShadow="False" BorderColor="#D8D8D8" 
                               Grid.Column="0" Grid.Row="1" 
                               HeightRequest="60" WidthRequest="280" Margin="0,0,10,40"
                               HorizontalOptions="End" VerticalOptions="Center">
                            <controls:CustomEntry  Keyboard="Text" FontSize="18" Placeholder="Add New Item to Pantry"  HeightRequest="55"  Margin="10,0,0,0"></controls:CustomEntry>
