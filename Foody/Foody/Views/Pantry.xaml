                                                                Color="White" />
                                                        </yummy:GradientStopCollection>
                                                    </yummy:PancakeView.BackgroundGradientStops>
                                                    <StackLayout Padding="0,50,0,0">
                                                        <Label
                                                            HorizontalOptions="CenterAndExpand"
                                                            VerticalOptions="CenterAndExpand"
                                                            FontAttributes="Bold"
                                                            FontSize="15"
                                                            Text="{Binding title}"
                                                            Style="{StaticResource TxtSubtitle1_2}" />
                                                    </StackLayout>
                                                </yummy:PancakeView>
                                                <Frame 
                                                    Grid.Row="0"
                                                    Grid.RowSpan="2"
                                                    Grid.Column="1"
                                                    CornerRadius="25"
                                                    BackgroundColor="White"
                                                    HasShadow="True"
                                                    BorderColor="LightGray"
                                                    Padding="8">
                                                    <Frame
                                                         Padding="0"
                                                         CornerRadius="20"
                                                         BackgroundColor="White"
                                                         HasShadow="False">
                                                        <ffimageloading:CachedImage
                                                            x:Name="image_loading"
                                                            CacheDuration="30"
                                                            DownsampleToViewSize="True"
                                                            FadeAnimationForCachedImages="True"
                                                            FadeAnimationEnabled="True"
                                                            FadeAnimationDuration="100"
                                                            LoadingPlaceholder="reload.gif"
                                                            Aspect="AspectFit"
                                                            CacheType="All"
                                                            Source="{Binding image}" />
                                                    </Frame>

                                                </Frame>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                <!--3-->
                                <Label Text="Try A New Recipes" FontSize="25" FontAttributes="Bold" Grid.Column="0" Grid.Row="4" Padding="10, 20, 0 , 0"/>
                                <CollectionView
                                    x:Name="collectionView_Random"
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    ItemsSource="{Binding PopularRecipes}"
