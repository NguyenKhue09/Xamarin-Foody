                        </Frame>

                    </Grid>
                    <Label x:Name="pantry" Text="PANTRY" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="White" />
                </StackLayout>
            </yummy:PancakeView>
            
            <Grid  Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="tabPantry" />
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <!--Tab view-->
                <Frame HorizontalOptions="Center" CornerRadius="30" Margin="6" Padding="8" Grid.Row="0" Grid.Column="0">
                    <tabs1:TabHostView x:Name="TabPantry"  
                                        HeightRequest="40"
                                        Margin="2"
                                        VerticalOptions="Center"
                                        BackgroundColor="White"
                                        CornerRadius="20"
                                        IsSegmented="True"
                                        SegmentedHasSeparator="False"
                                        SegmentedOutlineColor="White"
                                        TabType="Fixed"
                                        SelectedIndex="{Binding Source={x:Reference Switcher}, Path=SelectedIndex, Mode=TwoWay}"
                                        SelectedTabIndexChanged="TabPantry_SelectedTabIndexChanged">
