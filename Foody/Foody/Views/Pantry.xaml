                        <Frame  CornerRadius="10" Padding="0" HasShadow="False" BorderColor="#D8D8D8" 
                               Grid.Column="1" Grid.Row="1" 
                               HeightRequest="60" WidthRequest="65" Margin="0,0,0,40"
                               HorizontalOptions="Start" VerticalOptions="Center">
