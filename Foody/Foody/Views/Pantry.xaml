                                    <TapGestureRecognizer Tapped="showpopup_Clicked">
                                        
                                    </TapGestureRecognizer>
                                </tabs1:SegmentedTabItem.GestureRecognizers>
                            </tabs1:SegmentedTabItem>
                        </tabs1:TabHostView.Tabs>
                    </tabs1:TabHostView>
