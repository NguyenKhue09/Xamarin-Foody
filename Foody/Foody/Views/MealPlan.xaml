<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:controls="clr-namespace:Foody.Controls" xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="Foody.Views.MealPlan">

    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition x:Name="row1"/>
                <RowDefinition x:Name="row2"/>
            </Grid.RowDefinitions>
            <yummy:PancakeView  Grid.Column="0" Grid.Row="0" BackgroundColor="#07BDF6" CornerRadius="0,0,10,10" HeightRequest="10" WidthRequest="500">
                <Label
                    Text="Favorites" 
                    FontSize="25"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MaxLines="1"
                    TextColor="White"
                    LineBreakMode="TailTruncation"/>
            </yummy:PancakeView>
        </Grid>
    </ContentPage.Content>
</ContentPage>